---
import BaseHead from "../components/BaseHead.astro";
import MetaTags from "../components/MetaTags.astro";
import Favicon from "../components/Favicon.astro";
import Font from "../components/Font.astro";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const {content} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead />
    <Font />
    <MetaTags />
    <Favicon />
</head>
<body>
    <Navbar />
    <section class="w-11/12 lg:w-8/12 mx-auto">
        <h1 class="text-4xl lg:text-5xl text-gray-900 font-bold py-6">{content.title}</h1>
        <img src={content.imageThumbnail} alt={content.title} class="rounded-lg">

        <div class="flex justify-between mt-4">
            <div class="flex flex-col gap-y-2">
                <p class="uppercase text-md font-bold">written by</p>
                <p class="text-lg">{content.author}</p>
            </div>

            <div class="flex flex-col gap-y-2">
                <p class="uppercase text-md font-bold">last updated</p>
                <p class="text-lg">{content.dateUpdated}</p>
            </div>
        </div>
    </section>
    <article class="w-11/12 lg:w-8/12 mx-auto py-4">
        <slot></slot>
    </article>
    <Footer />
</body>
</html>

<style lang="scss">
    :global(html) {
        scroll-padding: 30px;
    }

    article :global(h1) {
        @apply text-4xl text-gray-900 font-bold my-4;
    }
    
    article :global(h2) {
        @apply text-3xl text-gray-900 font-bold my-4;
    }

    article :global(h3) {
        @apply text-2xl text-gray-900 font-bold my-2;
    }

    article :global(h4) {
        @apply text-xl text-gray-900 font-bold my-2;
    }

    article :global(p) {
        @apply text-lg;
    }

    article :global(ul) {
        @apply ml-4;
    }

    article :global(li) {
        @apply text-lg;
    }

    article :global(li:not(:last-child)) {
        @apply mb-1;
    }

    article :global(a) {
        @apply text-gray-900;
    }

    article :global(pre) {
        @apply p-4 my-3 rounded-lg bg-gray-100;
    }

    article :global(code .line span) {
        @apply text-gray-900;
    }
</style>
